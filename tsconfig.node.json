{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "incremental": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": ".",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "vite.config.ts",
    "client"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}